<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    android:id="@+id/items_schedule"
    android:clickable="true"
    android:background="@drawable/schedule_bg"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/beehive_tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="41dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Beehive"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image_team_schedule"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lawan1" />

        <TextView
            android:id="@+id/jam_tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/image_team_schedule"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tanggal_tv_schedule"
            android:layout_width="108dp"
            android:layout_height="24dp"
            android:layout_below="@+id/jam_tv_schedule"
            android:layout_marginStart="-16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/image_team_schedule"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="tanggal"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/image_lawan_schedule"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/jam_tv_schedule"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lawan2" />

        <TextView
            android:id="@+id/musuh_tv_schedule"
            android:layout_width="83dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-7dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="26dp"
            android:layout_toEndOf="@+id/image_lawan_schedule"
            android:fontFamily="@font/inter_semibold"
            android:text="Musuh"
            android:textColor="@color/black" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>