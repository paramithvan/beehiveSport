<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="247dp"
        android:layout_height="299dp"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:fontFamily="@font/inter_bold"
        android:layout_marginLeft="30dp"
        android:text="Login"
        android:textColor="@color/biru_elang"
        android:textSize="24sp"
        android:elevation="20dp" />

    <EditText
        android:id="@+id/email_edt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/kotak"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password_edt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Password"
        android:background="@drawable/kotak"/>

    <android.widget.Button
        android:id="@+id/login_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Log in"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_bold"
        android:background="@drawable/loginbtn"
        android:backgroundTint="@color/biru"/>

    <TextView
        android:id="@+id/or_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="or"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/dont_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Donâ€™t have an account?"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp" />

    <android.widget.Button
        android:id="@+id/signUp_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/inter_bold"
        android:background="@drawable/signup_kotak" />


</LinearLayout>